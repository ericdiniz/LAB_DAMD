{
  "name": "lab02-grpc-aluno",
  "version": "1.0.0",
  "description": "Sistema de tarefas usando gRPC e Protocol Buffers",
  "main": "src/server/server.js",
  "scripts": {
    "start": "node src/server/server.js",
    "dev": "nodemon src/server/server.js",
    "client": "node src/client/client.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "proto:compile": "grpc_tools_node_protoc --js_out=import_style=commonjs,binary:./generated --grpc_out=grpc_js:./generated --plugin=protoc-gen-grpc=`which grpc_tools_node_protoc_plugin` -I ./proto ./proto/*.proto",
    "server": "node src/server/server.js",
    "server:dev": "nodemon src/server/server.js",
    "demo": "npm run client",
    "benchmark": "node benchmark.js || echo 'benchmark opcional (adicionado no passo 11)'",
    "bench:grpc": "node bench/grpc-benchmark.js",
    "bench:grpc:list": "BENCH_OP=list   node bench/grpc-benchmark.js",
    "bench:grpc:create": "BENCH_OP=create node bench/grpc-benchmark.js",
    "bench:grpc:stats": "BENCH_OP=stats  node bench/grpc-benchmark.js",
    "debug:client": "node src/client/debug-client.js",
    "debug:client:save": "node src/client/debug-client.js | tee resultados/passo13/debug-session.txt"
  },
  "keywords": [
    "grpc",
    "protobuf",
    "sistemas-distribuidos",
    "rpc"
  ],
  "author": "Eric Rodrigues Diniz - Aluno PUC Minas",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.10.6",
    "@grpc/proto-loader": "^0.7.13",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "grpc-tools": "^1.13.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
